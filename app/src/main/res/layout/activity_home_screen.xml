<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen"
    tools:context="com.example.Screen.HomeScreen">

    <Button
        android:id="@+id/start_chat_button"
        android:layout_width="0dp"
        android:layout_height="219dp"
        android:layout_marginStart="215dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="158dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/take_picture_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/take_picture_button"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="12dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/start_chat_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_chat_button" />

</androidx.constraintlayout.widget.ConstraintLayout>