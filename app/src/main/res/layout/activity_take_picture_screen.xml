<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/takeimage"
    tools:context="com.example.Screen.TakePictureScreen">


    <Button
        android:id="@+id/take_pic_button"
        android:layout_width="71dp"
        android:layout_height="69dp"
        android:layout_marginBottom="40dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/retake_pictures"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/take_pic_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toEndOf="@+id/take_pic_button"
        app:layout_constraintTop_toTopOf="@+id/take_pic_button"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cameraflip" />

    <Button
        android:id="@+id/send_mail_button"
        android:layout_width="241dp"
        android:layout_height="26dp"
        android:layout_marginBottom="324dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Name_of_user"
        android:layout_width="207dp"
        android:layout_height="46dp"

        android:layout_marginTop="108dp"
        android:layout_marginEnd="28dp"

        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="text"

        android:textColor="#8F9294"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userMail"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="text"
        android:textColor="#8F9294"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/send_mail_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_of_user"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="398dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/peppericonapp" />

    <Button
        android:id="@+id/Backbutton"
        android:layout_width="49dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="#00FFFFFF"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />


</androidx.constraintlayout.widget.ConstraintLayout>