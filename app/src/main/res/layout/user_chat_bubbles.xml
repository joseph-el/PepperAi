<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="100dp">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubbles_of_user"
                android:fontFamily="@font/plus_2"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:layout_marginTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:maxWidth="480dp"
                android:textSize="20dp"
                android:text="hello worldndfkjdsnfdnsnskdjnfsdnkqsnkdqsnkqjsndsqkjndqsnqskjnqsnqsnsqnqsldqnssqndsqknsqnnqskjdnslndqskdnfdlksldnfsdnkdjndknfdsnfsdlsdfnsdknsdnsdklnsdds"
                android:textColor="@color/white"
                 />

            <LinearLayout
                android:id="@+id/visible_or_not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/edit_messageIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/pencil_circle_fill" />
            </LinearLayout>

        </LinearLayout>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/user_gest1"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="0dp"
            app:civ_shadow_color="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>